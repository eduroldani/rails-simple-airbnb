<h2>Welcomer to Kupfer AirBnB</h2>
<h3>All our flats <%=Flat.count %></h3>
<ul>
  <% @flats.each do |flat| %>
      <div class="card-product mt-3">
        <img src="https://images.unsplash.com/photo-1570129477492-45c003edd2be?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1000&q=80" />
        <div class="card-product-infos">
          <h2><%=flat.name %></h2>
          <p><%=flat.address %></p>
          <p><%= link_to "See More", flat_path(flat) %></p>
        </div>
      </div>
  <% end %>
</ul>
